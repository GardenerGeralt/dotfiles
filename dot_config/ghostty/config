font-family = "DM Mono Medium"
font-size = 10

background-opacity = 1
unfocused-split-opacity = 0.5
unfocused-split-fill = #11130f

keybind = alt+q=close_surface

keybind = ctrl+shift+alt+h=new_split:left
keybind = ctrl+shift+alt+j=new_split:down
keybind = ctrl+shift+alt+k=new_split:up
keybind = ctrl+shift+alt+l=new_split:right

keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:down
keybind = ctrl+k=goto_split:up
keybind = ctrl+l=goto_split:right

keybind = alt+h=resize_split:left,20
keybind = alt+j=resize_split:down,20
keybind = alt+k=resize_split:up,20
keybind = alt+l=resize_split:right,20
